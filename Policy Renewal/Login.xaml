<Window x:Class="Policy_Renewal.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Policy_Renewal"
        mc:Ignorable="d"
        Title="System Login" Height="400" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush></ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Margin="70,10,70,0" Grid.Row="2" Grid.RowSpan="4" Orientation="Vertical">
            <TextBlock x:Name="txtPin" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Enter System PIN" FontSize="20" FontWeight="Bold" Margin="-8,0,-28,0" Width="188" />
            <PasswordBox x:Name="txtPasswordBox"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="34,20" Width="84" />
            <Button x:Name="btn_Login" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Width="76" Height="28" Margin="38,0" Click="btn_Login_Click"/>
        </StackPanel>

    </Grid>
</Window>
